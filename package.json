{
  "name": "twitter-like-backend",
  "version": "0.1.0",
  "private": true,
  "description": "MVP backend for Twitter-like app (Express + Supabase)",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest --runInBand",
    "db:apply:schema": "node scripts/exec-sql.mjs sql/schema.sql",
    "db:apply:seed": "node scripts/exec-sql.mjs sql/seed.sql",
    "spec:check": "node scripts/validate-json.mjs openapi.json",
    "spec:postman": "npx --yes openapi-to-postmanv2 -s openapi.json -o postman_collection.json -p -O folderStrategy=Tags",
    "spec:types": "npx --yes openapi-typescript openapi.json -o src/types/api.d.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.7",
    "pg": "^8.12.0",
    "pino": "^9.2.0",
    "pino-http": "^9.0.0",
    "sharp": "^0.33.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.13",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
